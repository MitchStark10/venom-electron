{
  "name": "venom-electron",
  "version": "0.2.19",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "author": {
    "name": "Mitch Stark",
    "email": "mitchstark10@gmail.com"
  },
  "description": "Venom tasks",
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.1",
    "@mui/material": "^5.15.0",
    "@mui/x-date-pickers": "^6.19.3",
    "@reduxjs/toolkit": "^2.0.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@vitejs/plugin-react": "^4.3.4",
    "electron-updater": "^6.6.2",
    "moment": "^2.30.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.2",
    "react-redux": "^9.0.4",
    "react-router": "^7.1.0",
    "react-router-dom": "^7.1.0",
    "react-toastify": "^10.0.4",
    "vite": "^6.2.4",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "vite --port 3000",
    "dev": "vite --port 3000 --mode development",
    "build": "vite build --mode production",
    "serve": "vite preview",
    "type-check": "tsc --noEmit",
    "electron:start": "concurrently -k \"cross-env BROWSER=none yarn start\" \"electronmon .\"",
    "electron:package": "yarn build && electron-builder -mwl -c.extraMetadata.main=dist/electron.js",
    "release": "node scripts/release.js"
  },
  "eslintConfig": {
    "extends": ["react-app", "react-app/jest"]
  },
  "browserslist": {
    "production": ["last 1 electron version"],
    "development": ["last 1 electron version"]
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^33.0.1",
    "electron-builder": "^25.1.8",
    "electronmon": "^2.0.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "afterSign": "./scripts/notarize.js",
    "appId": "com.electron.venom",
    "productName": "venom",
    "files": ["dist/**/*", "node_modules/**/*"],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": "dmg",
      "icon": "dist/icon.icns"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    },
    "publish": {
      "provider": "github",
      "owner": "MitchStark10",
      "repo": "venom-electron"
    }
  }
}
